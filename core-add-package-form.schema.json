{
  "title": "Add package repository",
  "description": "New package repository request",
  "type": "object",
  "required": ["name", "url", "type"],
  "properties": {
    "name": {
      "type": "string",
      "minlength": 10
    },
    "url": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": ["OCI", "Helm"],
      "default": "Helm"
    },
    "auth": {
      "type": "object",
      "properties": {
        "authType": {
          "type": "string",
          "enum": ["None", "Basic", "Bearer", "Docker", "CustomHeader"]
        }
      }
    }
  },
  "definitions": {
    "basicAuth": {
      "type": "object",
      "properties": {
        "userName": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "required": ["userName", "password"]
    },
    "bearerAuth": {
      "type": "object",
      "properties": {
        "token": {
          "type": "string"
        }
      },
      "required": ["token"]
    },
    "dockerCreds": {
      "type": "object",
      "properties": {
        "secretName": {
          "type": "string"
        },
        "server": {
          "type": "string"
        },
        "userName": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "email": {
          "type": "string"
        }
      },
      "required": ["token"]
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "auth": {
            "properties": {
              "authType": {
                "const": "Basic"
              }
            }
          }
        }
      },
      "then": {
        "properties": {
          "auth": {
            "properties": {
              "usernamePassword": {
                "$ref": "#/definitions/basicAuth"
              }
            },
            "required": ["usernamePassword"]
          }
        },
        "required": ["auth"]
      }
    },
    {
      "if": {
        "properties": {
          "auth": {
            "properties": {
              "authType": {
                "const": "Bearer"
              }
            }
          }
        }
      },
      "then": {
        "properties": {
          "auth": {
            "$ref": "#/definitions/bearerAuth"
          }
        },
        "required": ["auth"]
      }
    },
    {
      "if": {
        "properties": {
          "auth": {
            "properties": {
              "authType": {
                "const": "Docker"
              }
            }
          }
        }
      },
      "then": {
        "properties": {
          "auth": {
            "properties": {
              "dockerCreds": {
                "$ref": "#/definitions/dockerCreds"
              }
            },
            "required": ["dockerCreds"]
          }
        },
        "required": ["auth"]
      }
    }
  ]
}
